<?xml version="1.0" encoding="UTF-8"?>
<!--<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">-->
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="naturAdventureJTA" transaction-type="JTA">
        <jta-data-source>mysqlDataSource</jta-data-source>
        <properties>
            <!--<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/>--> <!-- http://eclipse.org/eclipselink/documentation/2.5/jpa/extensions/p_ddl_generation.htm -->
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/> <!-- http://eclipse.org/eclipselink/documentation/2.5/jpa/extensions/p_ddl_generation.htm -->
            <property name="eclipselink.logging.level" value="INFO"/>
        </properties>
    </persistence-unit>
</persistence>
